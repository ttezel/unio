{
    "name": "twitter",
    "api_root": "https://api.twitter.com/1.1",
    "resources": {
        "followers/ids": {
            "path": "followers/ids.json",
            "methods": [ "get" ],
            "params": [
                {
                    "screen_name": "optional"
                },
                {
                    "oauth": "required"
                }
            ]
        },
        "statuses/update": {
            "path": "statuses/update.json",
            "methods": [ "post" ],
            "params": [
                {
                    "status": "required"
                },
                {
                    "in_reply_to_status_id": "optional"
                },
                {
                    "lat": "optional"
                },
                {
                    "long": "optional"
                },
                {
                    "place_id": "optional"
                },
                {
                    "display_coordinates": "optional"
                },
                {
                    "trim_user": "optional"
                }
            ]
        },
        "search": {
            "path": "http://search.twitter.com/search.json",
            "methods": [ "get" ],
            "params": [
                {
                    "q": "required"
                },
                {
                    "callback": "optional"
                },
                {
                    "geocode": "optional"
                },
                {
                    "lang": "optional"
                },
                {
                    "locale": "optional"
                },
                {
                    "page": "optional"
                },
                {
                    "result_type": "optional"
                }

            ]
        },
        "statuses/home_timeline": {
            "path": "statuses/home_timeline.json",
            "methods": [ "get" ],
            "params": [
        
            ]
        },
        "statuses/destroy/:id": {
            "path": "statuses/destroy/:id.json",
            "methods": [ "post" ],
            "params": [

            ]
        }
    }
}